            <mtd>
              <mi>r</mi>
              <mo>−</mo>
              <mn>1</mn>
            </mtd>
          </mtr>
        </mtable>
        <mo>)</mo>
      </mrow>
      <msub>
        <mstyle mathvariant="italic">
