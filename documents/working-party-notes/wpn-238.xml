    <mo>…</mo>
    <mo>+</mo>
    <mfrac>
      <mn>1</mn>
      <mi>r</mi>
    </mfrac>
    <mrow>
      <mrow>
        <mo>(</mo>
        <mtable>
          <mtr>
            <mtd>
              <mi>r</mi>
            </mtd>
          </mtr>
